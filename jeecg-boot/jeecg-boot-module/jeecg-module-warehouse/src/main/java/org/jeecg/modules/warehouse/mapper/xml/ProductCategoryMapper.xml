<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.jeecg.modules.warehouse.mapper.ProductCategoryMapper">

    <!-- Get category tree structure -->
    <select id="selectTree" resultType="org.jeecg.modules.warehouse.entity.ProductCategory">
        SELECT * FROM product_category WHERE status = 1 ORDER BY create_time ASC
    </select>

    <!-- Get categories by parent ID -->
    <select id="selectByParentId" resultType="org.jeecg.modules.warehouse.entity.ProductCategory">
        SELECT * FROM product_category WHERE parent_id = #{parentId} AND status = #{status} ORDER BY create_time ASC
    </select>

    <!-- Get categories by status -->
    <select id="selectByStatus" resultType="org.jeecg.modules.warehouse.entity.ProductCategory">
        SELECT * FROM product_category WHERE status = #{status} ORDER BY create_time ASC
    </select>

</mapper>